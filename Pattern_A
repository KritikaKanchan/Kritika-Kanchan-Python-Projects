rows=int(input("Enter row no. how long you want height of A"))
a=int(input("Enter row no. where you want the line to make it a A"))
for i in range(1, rows+1):
    for j in range(rows-i):
        print(' ', end='')
    for j in range(2*i-1):
        if j == 0 or j == 2*i - 2 or i == a:
            print('*', end='')
        else:
            print(' ', end="")
    print()
